
<h1>Books</h1>
<table>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><%= book.title %></td>
  <td><%= book.body %></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure"%></td>
</tr>
<% end %>
</table>

<h1>New Book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>
<div id="error_explanation">
<% if @book.errors.any? %>
  <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
  <ul>
    <li>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
    </li>
  </ul>
<% end %>
</div>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
  <br>

  <%= f.submit 'Create Book' %>

<% end %>